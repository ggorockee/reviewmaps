# ===== Django 기본 설정 =====

# Django Secret Key (프로덕션 필수!)
# 개발: 기본값 사용 가능
# 프로덕션: 반드시 강력한 시크릿 키 설정 필요
SECRET_KEY=your-secret-key-here-generate-using-django-secret-key-generator

# Debug Mode
# 프로덕션: 반드시 False로 설정
DEBUG=True

# Allowed Hosts (프로덕션 필수!)
# 프로덕션: 실제 도메인만 허용 (예: ALLOWED_HOSTS=api.review-maps.com,www.review-maps.com)
# 개발: * 또는 localhost,127.0.0.1
ALLOWED_HOSTS=*

# ===== 데이터베이스 설정 =====

POSTGRES_USER=test
POSTGRES_PASSWORD=test1234
POSTGRES_DB=test
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===== JWT 인증 설정 =====

# JWT Secret Key (프로덕션 필수!)
# 개발: SECRET_KEY 사용
# 프로덕션: 반드시 별도의 강력한 시크릿 키 설정
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT 알고리즘
JWT_ALGORITHM=HS256

# JWT 토큰 만료 시간
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== SNS 로그인 설정 =====
# 현재 ReviewMaps는 모바일 앱에서 SDK로 직접 로그인 후 서버에서 토큰 검증만 수행
# 따라서 대부분의 OAuth 설정은 선택사항입니다.

# Apple OAuth
# Bundle ID: com.reviewmaps.mobile
APPLE_CLIENT_ID=com.reviewmaps.mobile

# Kakao OAuth (선택사항 - 서버측 OAuth 흐름 시에만 필요)
KAKAO_REST_API_KEY=your_kakao_rest_api_key_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
KAKAO_REDIRECT_URI=http://localhost:8000/v1/auth/kakao/callback

# Google OAuth
# iOS Client ID (번들 ID: com.reviewmaps.mobile)
GOOGLE_CLIENT_ID_IOS=your_google_ios_client_id.apps.googleusercontent.com

# Android Client ID (패키지명: com.reviewmaps.mobile)
GOOGLE_CLIENT_ID_ANDROID=your_google_android_client_id.apps.googleusercontent.com

# 서버 검증용 (현재는 불필요 - 앱에서 직접 토큰 검증)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/v1/auth/google/callback

# Google 프로젝트 정보
GOOGLE_PROJECT_ID=reviewmaps-478704

# ===== 광고 설정 (선택 사항) =====
# Django Admin에서 관리 가능하므로 환경변수 설정은 선택 사항

# AdMob - Android (AOS)
ADMOB_AOS_APP_ID=ca-app-pub-xxx~xxx
ADMOB_AOS_BANNER_AD_UNIT_ID=ca-app-pub-xxx/aos-banner
ADMOB_AOS_INTERSTITIAL_AD_UNIT_ID=ca-app-pub-xxx/aos-interstitial
ADMOB_AOS_REWARDED_AD_UNIT_ID=ca-app-pub-xxx/aos-rewarded

# AdMob - iOS
ADMOB_IOS_APP_ID=ca-app-pub-xxx~xxx
ADMOB_IOS_BANNER_AD_UNIT_ID=ca-app-pub-xxx/ios-banner
ADMOB_IOS_INTERSTITIAL_AD_UNIT_ID=ca-app-pub-xxx/ios-interstitial
ADMOB_IOS_REWARDED_AD_UNIT_ID=ca-app-pub-xxx/ios-rewarded

# Kakao AdFit - Android (AOS)
KAKAO_ADFIT_AOS_BANNER_AD_UNIT_ID=DAN-xxx-aos-banner
KAKAO_ADFIT_AOS_NATIVE_AD_UNIT_ID=DAN-xxx-aos-native

# Kakao AdFit - iOS
KAKAO_ADFIT_IOS_BANNER_AD_UNIT_ID=DAN-xxx-ios-banner
KAKAO_ADFIT_IOS_NATIVE_AD_UNIT_ID=DAN-xxx-ios-native

# Apple Search Ads (iOS만 지원)
APPLE_SEARCH_ADS_ORG_ID=your_org_id_here
APPLE_SEARCH_ADS_KEY_ID=your_key_id_here
APPLE_SEARCH_ADS_TEAM_ID=your_team_id_here

# ===== 익명 사용자 세션 설정 =====

# 익명 세션 만료 시간 (시간 단위)
ANONYMOUS_SESSION_EXPIRE_HOURS=60
