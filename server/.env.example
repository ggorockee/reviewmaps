# Server
SERVER_PORT=3000
SERVER_ENV=development

# Database - DATABASE_URL 또는 개별 환경변수 사용 가능
DATABASE_URL=postgres://user:password@localhost:5432/reviewmaps?sslmode=disable
# 개별 환경변수 (DATABASE_URL이 없을 때 사용)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=reviewmaps
POSTGRES_PASSWORD=your-password
POSTGRES_DB=reviewmaps
POSTGRES_SSLMODE=disable

# JWT
JWT_SECRET_KEY=your-secret-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30일 (30 * 24 * 60)
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Firebase
FIREBASE_CREDENTIALS_PATH=./secrets/firebase-credentials.json

# Kakao
KAKAO_REST_API_KEY=your-kakao-rest-api-key

# Google
GOOGLE_CLIENT_ID_IOS=your-google-client-id-ios
GOOGLE_CLIENT_ID_ANDROID=your-google-client-id-android
GOOGLE_CLIENT_ID_WEB=your-google-client-id-web

# Apple
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_BUNDLE_ID=com.yourapp.bundle

# SigNoz (OpenTelemetry)
SIGNOZ_ENDPOINT=http://localhost:4318
